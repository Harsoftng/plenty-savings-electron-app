{
  "name": "plenty-savings-shop",
  "version": "1.0.0",
  "description": "The Plenty Savings Shop App",
  "author": "Ibrahim Haruna <oakshieldnigeria@gmail.com>",
  "homepage": "plentysavings.shop",
  "license": "ISC",
  "main": "index.js",
  "build": {
    "appId": "shop.plentysavings.app",
    "productName": "Plenty Savings Shop",
    "icon": "resources/favicon.png",
    "publish": [
      {
        "provider": "github",
        "repo": "",
        "owner": "harsoftng"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.office",
      "identity": null,
      "icon": "resources/favicon.png"
    },
    "dmg": {
      "background": "resources/favicon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/favicon.png"
    },
    "nsis": {
      "installerIcon": "resources/favicon.png",
      "uninstallerIcon": "resources/favicon.png",
      "runAfterFinish": true
    },
    "portable": {
      "requestExecutionLevel": "user"
    }
  },
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron ."
  },
  "keywords": [
    "Plenty",
    "Savings",
    "Shop",
    "Plenty Savings Shop",
    "Plenty Savings"
  ],
  "devDependencies": {
    "electron": "^15.3.0",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "@types/electron": "^1.6.10",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.6.1",
    "express": "^4.17.1",
    "serve-static": "^1.14.1"
  }
}
